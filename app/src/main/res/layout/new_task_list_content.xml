<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <TableLayout
        android:id="@+id/r_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_green">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:paddingBottom="16dp"
                android:paddingEnd="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:paddingStart="10dp"
                android:paddingTop="16dp"

                android:text="Task #:"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/task_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:ems="8"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="1dp"
                android:paddingRight="16dp"

                android:paddingStart="1dp"
                android:paddingTop="16dp"
                android:text="0000000128"

                android:textColor="#FFF"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingBottom="16dp"
                android:paddingEnd="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingStart="10dp"
                android:paddingTop="16dp"


                android:text="Call #:"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/call_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="16dp"
                android:paddingEnd="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingStart="0dp"
                android:paddingTop="16dp"

                android:text="MD00000065"
                android:textColor="#FFF"
                android:textSize="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/divider_color" />


        <TableRow
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:text="•  Location:"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:maxLength="20"
                android:textColor="#FFF"

                android:textSize="15dp"

                />
        </TableRow>

        <TableRow
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:text="•  Complain:"
                android:textColor="#FFF"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="30"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="•  Priority:"

                android:textColor="#FFF"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/priority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="•  Reported Date:"
                android:textColor="#FFF"

                android:textSize="15dp" />

            <TextView
                android:id="@+id/r_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFF"

                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:paddingBottom="10dp"
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="•  Reported Time:"
                android:textColor="#FFF"

                android:textSize="15dp" />

            <TextView
                android:id="@+id/r_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFF"

                android:textSize="15dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <TableRow
            android:id="@+id/completed_sign"
            android:background="@color/btn"
            android:paddingEnd="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_checkmark_96_1" />


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />


    </TableLayout>

</android.support.v7.widget.CardView>